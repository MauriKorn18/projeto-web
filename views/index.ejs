<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gerenciador de Tarefas</title>
    <link rel="stylesheet" href="/public/styles/main.css">
</head>
<body>
    <div class="container">
        <h1>Gerenciador de Tarefas</h1>
        <div class="add-task-link">
            <a href="/tarefas/nova" class="btn">+ Adicionar Nova Tarefa</a>
        </div>
        <ul id="task-list">
            <% if (tasks && tasks.length > 0) { %>
                <% tasks.forEach(task => { %>
                    <li>
                        <span><%= task.titulo || task.title %></span>
                        <div class="task-actions">
                            <a href="/tarefas/editar/<%= task.id %>" class="btn btn-secondary">Editar</a>
                            <button onclick="deleteTask('<%= task.id %>')" class="btn btn-danger">Excluir</button>
                        </div>
                    </li>
                <% }); %>
            <% } else { %>
                <li style="text-align: center; border: none; box-shadow: none;">
                    <span>Nenhuma tarefa encontrada. Adicione uma nova tarefa!</span>
                </li>
            <% } %>
        </ul>
    </div>

    <script>
        async function deleteTask(id) {
            if (confirm("Tem certeza que deseja excluir esta tarefa?")) {
                try {
                    const response = await fetch(`/api/tarefas/${id}`, {
                        method: 'DELETE'
                    });
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('Erro ao excluir tarefa.');
                    }
                } catch (error) {
                    console.error('Erro:', error);
                    alert('Erro ao excluir tarefa.');
                }
            }
        }

        // Carregar tarefas dinamicamente
        async function loadTasks() {
            try {
                const response = await fetch('/api/tarefas');
                const tasks = await response.json();
                
                const taskList = document.getElementById('task-list');
                taskList.innerHTML = '';
                
                if (tasks && tasks.length > 0) {
                    tasks.forEach(task => {
                        const li = document.createElement('li');
                        li.innerHTML = `
                            <span>${task.titulo || task.title}</span>
                            <div class="task-actions">
                                <a href="/tarefas/editar/${task.id}" class="btn btn-secondary">Editar</a>
                                <button onclick="deleteTask('${task.id}')" class="btn btn-danger">Excluir</button>
                            </div>
                        `;
                        taskList.appendChild(li);
                    });
                } else {
                    taskList.innerHTML = '<li style="text-align: center; border: none; box-shadow: none;"><span>Nenhuma tarefa encontrada. Adicione uma nova tarefa!</span></li>';
                }
            } catch (error) {
                console.error('Erro ao carregar tarefas:', error);
            }
        }
    </script>
</body>
</html>

